!-------------------------------------------------------------------------------
! resolution & colors
Xft.dpi: 96
URxvt*geometry: 120x40
URxvt*depth: 32
URxvt*background: rgba:0000/0000/0000/dddd

!URxvt*foreground: #ffffff
URxvt*fading: 40

URxvt.letterSpace: -2
URxvt*termName: rxvt-256color

!-------------------------------------------------------------------------------
! theme
#include ".Xdefault.d/themes/badwolf"
!-------------------------------------------------------------------------------
! fonts
#include ".Xdefault.d/fonts"


!-------------------------------------------------------------------------------
URxvt*saveLines: 10000
URxvt*scrollBar: false

URxvt*cursorColor: white
URxvt*cursorColor2: #aaaaaa

!-------------------------------------------------------------------------------
! tabbedex is not provided by default (Debian/Ubuntu)
! put it in ~/.urxvt/
URxvt.perl-lib: .urxvt/
URxvt.perl-ext-common: default,matcher,clipboard

URxvt.keysym.C-M-c: perl:clipboard:copy
URxvt.keysym.C-M-v: perl:clipboard:paste

!-------------------------------------------------------------------------------
! Launch firefox with the a left click on a URL
!URxvt.url-launcher: /usr/bin/x-www-browser
!URxvt.matcher.button: o

!-------------------------------------------------------------------------------
! unknown
!URxvt.background-expr: scale  keep { load $HOME/img.jpeg }
!Xft.lcdfilter: ldcdefault
!Xft.hintstyle: hintslight
!URxvt.iso14755: False
