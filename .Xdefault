URxvt*geometry: 120x40
URxvt*depth: 32
URxvt*background: rgba:0000/0000/0000/dddd

URxvt.letterSpace: 0

Xft.dpi: 96
 URxvt*font: xft:Terminus:style=Regular:size=14:antialias=false, \
 xft:Terminus:style=Regular:size=14:antialias=false,\
 xft:Ethjopic Hiwua:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Fantuwua:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Tint:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Yebse:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Yigezu Bisrat Gothic:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Zelan:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Wookianos:style=Regular:size=14:antialias=false,\
 xft:Junicode:style=Regular:size=14:antialias=false,\
 xft:Ethiopic Yigezu Bisrat Goffer:style=Regular:size=14:antialias=false, \
 xft:VL Gothic,VL ゴシック:style=regular:size=14:antialias=false


! using the old style font loading to avoid the cursor to sometime disappear...
!URxvt*font: -*-terminus-medium-r-*-*-14-*-*-*-*-*-*-u

URxvt*saveLines: 10000
URxvt*scrollBar: false

URxvt*cursorColor: white
URxvt*cursorColor2: #aaaaaa

URxvt.letterSpace: -2

! tabbedex is not provided by default (Debian/Ubuntu)
! put it in ~/.urxvt/
URxvt.perl-lib: .urxvt/
URxvt.perl-ext-common: default,matcher,clipboard

! Launch firefox with the a left click on a URL
!URxvt.url-launcher: /usr/bin/firefox
!URxvt.matcher.button: o

! correct name so that applications detects a 256 color
! enabled terminal emulator
!URxvt*termName: rxvt-256color

!URxvt*foreground: #ffffff
URxvt*fading: 40

Xft.lcdfilter: ldcdefault
Xft.hintstyle: hintslight

!URxvt.clipboard.autocopy: true
URxvt.keysym.M-C-c: perl:clipboard:copy
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste
!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

#include ".Xdefault.d/badwolf"
!#include ".Xdefault.d/badwolf_2"
!#include ".Xdefault.d/solarized_dark"
!#include ".Xdefault.d/monokai_dark"
!#include ".Xdefault.d/monokai_dark_2"
!#include ".Xdefault.d/solarized_light"
!#include ".Xdefault.d/solarized"
